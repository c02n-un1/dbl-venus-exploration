const int pingPin = 9;

void setup() {
  // initialize serial communication:
  Serial.begin(9600);
}

long ultrasound(){
  pinMode(pingPin, OUTPUT);
  digitalWrite(pingPin, LOW);
  delayMicroseconds(2);
  digitalWrite(pingPin, HIGH);
  delayMicroseconds(5);
  digitalWrite(pingPin, LOW);

  pinMode(pingPin, INPUT);
  long duration = pulseIn(pingPin, HIGH);
  return duration /29/2;
}

void loop(){
  long cm=ultrasound();
  Serial.print(cm);
  Serial.println();
  delay(100);
}
